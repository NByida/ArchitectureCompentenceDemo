<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey_50"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp"
        app:cardCornerRadius="5dp"
        android:maxWidth="10dp"
        app:cardMaxElevation="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/laySave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shareIamge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="80dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@mipmap/pic_beauty"
                />

            <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                android:id="@+id/tv1"
                android:ems="1"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/shareIamge"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv2"
                android:text="远赴人间惊鸿宴"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />

            <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                android:id="@+id/tv2"
                android:ems="1"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintLeft_toRightOf="@id/tv1"
                app:layout_constraintRight_toRightOf="parent"
                android:text="一睹人间\n盛/n世颜"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/save"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        />

</androidx.constraintlayout.widget.ConstraintLayout>