<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                        android:id="@+id/tv_title"
                        android:transitionName="name"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="春望"
                        />


                    <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                        android:id="@+id/tv_potery_name"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:transitionName="auth"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杜甫"
                        />


                    <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                        android:id="@+id/context"
                        android:paddingTop="100dp"
                        android:textSize="20sp"
                        android:transitionName="context"
                        android:lineSpacingExtra="15dp"
                        android:text="一去二三里，
烟村四五家。
亭台六七座，
八九十之花。"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_gravity="center"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="徐"
                        />
                </FrameLayout>
            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/lay_recommend"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:src="#999999"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="翻译"
            />

        <TextView
            android:id="@+id/fanyi"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:src="#999999"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="注释"
            />


        <TextView
            android:id="@+id/zhushi"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:src="#999999"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="赏析"
            />

        <TextView
            android:id="@+id/shangxi"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:src="#999999"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="拼音"
            />

        <TextView
            android:id="@+id/pinyin"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/lay_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:visibility="invisible"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/c"
                    />

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正文"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_notes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/c"
                    />

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注释"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_trans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/c"
                    />

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="译文"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_apprecate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/c"
                    />

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赏析"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>