<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
            android:id="@+id/tv_title"
            android:transitionName="name"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="春望"
            />


        <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
            android:id="@+id/tv_potery_name"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:transitionName="auth"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杜甫"
            />
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >



                    <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                        android:id="@+id/context"
                        android:paddingTop="70dp"
                        android:textSize="20sp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:transitionName="context"
                        android:lineSpacingExtra="15dp"
                        android:text="一去二三里，
烟村四五家。
亭台六七座，
八九十之花。"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/lay_recommend"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="130dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/lay_opercate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp"
            >
            <RelativeLayout
                android:id="@+id/lay_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50dp"
                >

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:text="正文" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp"
            >

            <RelativeLayout
                android:id="@+id/lay_notes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                >

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="注释" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:id="@+id/lay_trans"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="50dp"
                >

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:id="@+id/tv_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="译文" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:id="@+id/lay_apprecate"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50dp"

                >

                <com.gmail.xuyimin1994.architecturecompentencedemo.ui.customeView.TypeFaceTextView
                    android:id="@+id/tv_appracate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="赏析" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>